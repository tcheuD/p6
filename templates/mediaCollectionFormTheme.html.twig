{% block PictureFormType_row %}
    <div class="col-md-3">
        {% if data.url is defined %}
            <img style="width: 10%" src="/images/{{ data.url }}" alt="">
        {% endif %}
        {{ form_label(form) }}
        {{ form_errors(form) }}
        {{ form_widget(form) }}
    </div>

{% endblock %}

{% block PictureFormType_widget %}
    {{ form_widget(form) }}
    <br/>
    <p class="text-center">
        <a href="#" class="collection-up btn btn-default">&lt;</a>
        <a href="#" class="collection-remove btn btn-default">-</a>
        <a href="#" class="collection-add btn btn-default">+</a>
        <a href="#" class="collection-down btn btn-default">&gt;</a>
    </p>

{% endblock %}

{% block _edit_trick_form_mainPicture_row %}
    {{ form_label(form) }}
    {{ form_errors(form) }}
    <img style="width: 30%" src="/images/{{ data }}" alt="">
    {{ form_widget(form) }}
{% endblock %}