{% block _trick_form_mainPicture_row %}
    {{ form_errors(form) }}
    <div class="mainPictureContainer" id="mainPictureContainer">
        <h3>Image principal</h3>
        <img style="width: 250px; height: 150px" src="/{{ data }}" href="/{{ data }}" id="main-pic" class="img-fluid test-popup-link" alt="">
        <div>
            <button id="edit-main-picture" class="edit" type="submit"><i class="fas fa-pen x-large"></i></button>
        </div>
    </div>

    {{ form_widget(form) }}
{% endblock %}

{% block _trick_form_mainPicture_widget %}
    <div id="form_image" class="form_images" onclick="off()">
        <div id="form_image_container">
        </div>
    </div>
    {{ form_widget(form) }}
{% endblock %}

{% block _trick_form_videos_row %}
    {{ form_errors(form) }}
    {{ form_widget(form) }}
{% endblock %}

{% block VideoFormType_label %}
{% endblock %}

{% block VideoFormType_widget %}
    <div id="{{ form.vars.id }}">
        {% if data.url is defined %}
            <div>
                <iframe src="http://www.youtube.com/embed/{{ data.identif }}?autoplay=0"
                        frameborder="0" id="iframe_{{ form.vars.id }}"></iframe>
            </div>

            <label for="{{ form.url.vars.id }}" class="required video-label">                    <i class="fas fa-pen"></i>
            </label>
            <button class="btn delete collection-remove edit_trick_form_videos-collection-remove edit_trick_form_videos-collection-action"><i class="fas fa-trash-alt"></i></button>
            <input type="text" id="{{ form.url.vars.id }}" name="{{ form.url.vars.full_name }}" class="video-input" required="required" inputmode="url" value="{{ data.url }}" style="display: none;" />
        {% else %}
            <input type="text" id="{{ form.url.vars.id }}" name="{{ form.url.vars.full_name }}" class="video-input" required="required" inputmode="url" value="" />
            <input type="button" value="Ajouter" name="{{ form.url.vars.id }}" class="video-button"/>
        {% endif %}
    </div>
{% endblock %}
