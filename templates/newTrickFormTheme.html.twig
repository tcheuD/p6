{% block _trick_form_pictures_row %}
    {{ form_errors(form) }}
    {{ form_widget(form) }}
{% endblock %}

{% block _trick_form_title_label %}
{% endblock %}
{% block PictureFormType_widget %}

    <div class="content">
        {% if data.url is defined %}
            <img style="width: 250px; height: 150px" src="/images/{{ data.url }}" id="{{ data.id }}" href="/images/{{ data.url }}" alt="" class="test-popup-link">

            <div id="{{ form.vars.id}}">
                <div>
                    <label for="{{ form.url.vars.id }}">
                        <i class="fas fa-pen"></i>
                    </label>
                    <button class="btn delete collection-remove edit_trick_form_pictures-collection-remove edit_trick_form_pictures-collection-action"><i class="fas fa-trash-alt"></i></button>
                    <input id="{{ form.url.vars.id }}" name="{{ form.url.vars.full_name }}" class="pic" type="file">
                </div>
            </div>
        {% else %}
            <img style="width: 250px; height: 150px;" src="" id="" alt="" class="hide">
            <div id="{{ form.vars.id}}">
                <div>
                    <label for="{{ form.url.vars.id }}" class="hide">
                        <i class="fas fa-pen"></i>
                    </label>
                    <button class="btn delete collection-remove edit_trick_form_pictures-collection-remove edit_trick_form_pictures-collection-action"><i class="fas fa-trash-alt"></i></button>
                    <input id="{{ form.url.vars.id }}" name="{{ form.url.vars.full_name }}" class="input-pic-new pic" type="file" style="display: block">
                </div>
            </div>
        {% endif %}

        <p class="text-center hide">
            <a href="#" class="collection-up btn btn-default">&lt;</a>
            <a href="#" class="collection-remove btn btn-default">-</a>
            <a href="#" class="collection-add btn btn-default">+</a>
            <a href="#" class="collection-down btn btn-default">&gt;</a>
        </p>
    </div>

{% endblock %}

