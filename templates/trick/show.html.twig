<h1>{{ trick.title }}</h1>
<div>
    {{ trick.content}}
    <em>{{ trick.category.name }}</em>
</div>
<div>
    <p>Image principale:</p>

    <img style="width:40%" src="{{ asset(trick.mainPicturePath) }}" alt="">
</div>
{% for picture in trick.pictures %}
    <img style="width:25%" src="{{ asset(picture.imagePath) }}" alt="">
{% endfor %}

<div>
    {% for video in trick.videos %}
        <iframe width="640" height="360"
                src="http://www.youtube.com/embed/{{ video.identif }}?autoplay=0"
                frameborder="0"></iframe>
    {% endfor %}
</div>

<h3>Commentaires : </h3>

{% if is_granted('ROLE_USER') %}
    {{ form_start(commentForm) }}
    {{ form_widget(commentForm) }}

    <button type="submit">
        Ajouter
    </button>
    {{ form_end(commentForm) }}
{% endif %}
{% for comment in comments %}
    <p>Par: {{ comment.user.firstname }} {{ comment.user.name }} le {{ comment.commentDate|date('Y-m-d') }}</p>
    <img style="width:150px" src="{{ asset(comment.user.picturePath) }}" alt="">
    <p>{{ comment.comment }}</p>
{% endfor %}

